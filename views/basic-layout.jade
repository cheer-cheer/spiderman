doctype html
html.no-js(lang='zh-cmn-Hans')
  head
    title Spiderman - 爬虫调度管理中心 - #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    meta(name='renderer' content='webkit')
    meta(name='force-rendering' content='webkit')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    script(src='/lib/modernizr/modernizr.min.js')
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;URL=/browser-not-supported.html">
    <![endif]-->
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet' href='/lib/font-awesome/css/font-awesome.min.css')
    script(src='/lib/requirejs/require.js')
    script(src='/js/require-cfg.js')
    script.
      require(['bootstrap'],function(){})
    block html_head
    if settings.env === 'development' && settings.livereload
      script.
        (function(h,l,j,k,i,a){if(k!=null){i=l.createElement(j);i.async=1;i.src="//"+location.hostname+":"+k+"/livereload.js";a=l.getElementsByTagName(j)[0];a.parentNode.insertBefore(i,a)}})(window,document,"script",!{settings.livereload});
  body
    .js-disabled
      h1 请启用 JavaScript
      p 您的浏览器禁用了 JavaScript。

    // HTML 顶部导航
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target="#w-nav-items" title='展开/收起导航条。')
            span.sr-only 切换导航
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/?t-src=navbar') Spiderman 爬虫调度管理中心
        #w-nav-items.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') 控制台
            li
              a(href='http://www.baidu.com/?ref-id=spiderman' target='blank') 搜索引擎
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown') 开发者
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='#') 开发文档
                li
                  a(href='#') SDK 下载
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#', title='您还没有登录。') 登录

    // 正文
    .container-fluid
      block body_content

    // 页脚
    footer.sm-footer
      .container
